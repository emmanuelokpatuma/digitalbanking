# Terraform values file for production
project_id   = "charged-thought-485008-q7"
region       = "us-central1"
zone         = "us-central1-a"
environment  = "production"

# GKE Configuration
cluster_name     = "digitalbank-gke"
node_count       = 3
min_node_count   = 3
max_node_count   = 10
machine_type     = "e2-standard-4"
disk_size_gb     = 100

# Network Configuration
network_name            = "digitalbank-vpc"
subnet_name             = "digitalbank-subnet"
subnet_cidr             = "10.0.0.0/24"
pods_cidr               = "10.1.0.0/16"
services_cidr           = "10.2.0.0/16"
master_ipv4_cidr_block  = "172.16.0.0/28"

# Database Configuration
database_tier     = "db-n1-standard-2"
database_version  = "POSTGRES_15"

# Domain
domain_name = "digitalbank.example.com"

# Monitoring & Logging
enable_monitoring = true
enable_logging    = true
